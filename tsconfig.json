{
    "compilerOptions": {
        "strict": true,
        "rootDir": "./",
        "declaration": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./dist",
        "target": "es6",
        "removeComments": true,
        "sourceMap": false
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}